        <div class="main-content">
            {% if block('content') is defined %}
                {{ block('content') }}
            {% elseif block("body") is defined or block("section_body") is defined %}
                <section class="section">
                    <div class="section-header">
                        <h1>{% if block("title") is defined %}{{ block("title") }}{% endif %}</h1>
                        <div class="section-header-breadcrumb">
                            <div class="breadcrumb-item active"><a href="{{ path('homepage') }}">トップページ</a></div>
                            <div class="breadcrumb-item"><a href="{{ app.request.requestUri }}">{% if block("title") is defined %}{{ block("title") }}{% endif %}</a></div>
                            <div class="breadcrumb-item">All {% if block("title") is defined %}{{ block("title") }}{% endif %}</div>
                        </div>
                    </div>
                    <div class="section-body">
                        {% if block("section_body") is defined %}
                            {{ block("section_body") }}
                        {% else %}
                            {% if block("description") is defined and block("description")!="" %}
                            <div class="section-title"><h2>{{ block("description") }}</h2></div>
                            <p class="section-lead">{% if block("description_contents") is defined %}{{ block("description_contents") }}{% endif %}</p>
                            {% endif %}
                            <!--div class="card card-statistic-1"-->
                            <div class="card">
                                <div class="card-wrap">
                                    {% if block("page_icon") %}
                                        <div class="card-icon bg-primary">
                                            <i class="{{ block("page_icon") }}"></i>
                                        </div>
                                    <div class="card-header">
                                        {% if block('page_title') is defined %}
                                            <h3>{{ block('page_title') }}</h3>
                                        {% endif %}
                                        {% if block('page_sub_title') is defined %}
                                            <h4>{{ block('page_sub_title') }}</h4>
                                        {% endif %}
                                    </div>
                                    {% endif %}
                                    <div class="card-body p-2">
