{% extends 'base.html.twig' %}

{% block title %}お知らせ管理{% endblock %}

{% block body %}
    <div class="card shadow-primary card-statistic-1">
        <div class="card-icon bg-info">
            <i class="far fa-user"></i>
        </div>
        <div class="card-wrap">
            <div class="card-header">
                <div class="badge badge-pill badge-danger mb-1 ">{{ news.Division }}</div>
            </div>
            <div class="card-body">
                {{ news.Title }}
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-3">
            <p class="card-text">{{ news.Contents|raw|nl2br }}</p>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="mb-auto p-2">
                    <a class="btn btn-primary" href="{{ path('news_index') }}">リストに戻る</a>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                <div class="mb-auto p-2">
                    <a class="btn btn-primary" href="{{ path('news_list') }}">編集リストに戻る</a>
                </div>

                <div class="mb-auto p-2">
                    <a class="btn btn-warning" href="{{ path('news_edit', {'id': news.id}) }}">編集</a>
                </div>

                <div class="mb-auto p-2">
                    {{ include('news/_delete_form.html.twig') }}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}