{% extends 'base.html.twig' %}

{% block title %}ユーザー情報{% endblock %}

{% block body %}
    <h1>ユーザー 一覧</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.isVerified ? '承認済み' : '未承認' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">{{ "show"|trans }}</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">{{ "edit"|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ "no records found"|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">{{ "Create new"|trans }}</a>
{% endblock %}
