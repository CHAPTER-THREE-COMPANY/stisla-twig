        <div class="alert alert-{{label}} alert-dismissible alert-has-icon show fade">
            <div class="alert-icon"><i class="far fa-lightbulb"></i></div>
            <div class="alert-body">
                <button class="close" data-dismiss="alert">
                    <span>Ã—</span>
                </button>
                {{ message | raw }}
            </div>
        </div>
    {% endfor %}
{% endfor %}
